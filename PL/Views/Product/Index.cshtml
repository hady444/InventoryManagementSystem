@model (Contract.PagedResult<DAL.Models.Product> PagedProducts, List<DAL.Models.Product> Products)
@{
    var products = Model.PagedProducts?.Items?.Any() == true
        ? Model.PagedProducts.Items
        : Model.Products;
}

<a href="/Product" class="text-decoration-none text-reset">
    <h2>Products</h2>
</a>
<a asp-action="Create" class="btn btn-primary mb-3">Add Product</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-link mb-3">Back to Home</a>
<button class="btn btn-secondary mb-3"
        onclick="location.href='@Url.Action("Index", "Product", new { pageNumber = 1, pageSize = 3 })'">
    Show Pagination
</button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>SKU</th>
            <th>Description</th>
            <th style="width:220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in products)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.SKU</td>
                <td>@p.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-sm btn-info">Details</a>

                    <form asp-action="Delete"
                          asp-route-id="@p.Id"
                          method="post"
                          style="display:inline;">
                        <input type="hidden" name="pageNumber" value="@Context.Request.Query["pageNumber"]" />
                        <input type="hidden" name="pageSize" value="@Context.Request.Query["pageSize"]" />
                        @Html.AntiForgeryToken()
                        <button type="button"
                                class="btn btn-sm btn-danger delete-btn"
                                data-id="@p.Id">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (Model.PagedProducts?.TotalPages > 1)
{
    var currentPage = Model.PagedProducts.PageNumber;
    var totalPages = Model.PagedProducts.TotalPages;
    var pageSize = Model.PagedProducts.PageSize;

    int windowSize = 2; // pages before & after current
    int startPage = Math.Max(1, currentPage - windowSize);
    int endPage = Math.Min(totalPages, currentPage + windowSize);

    <nav>
        <ul class="pagination justify-content-center">

            <!-- Previous -->
            <li class="page-item @(Model.PagedProducts.HasPreviousPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(currentPage - 1)"
                   asp-route-pageSize="@pageSize">
                    Previous
                </a>
            </li>

            <!-- First page -->
            @if (startPage > 1)
            {
                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="1"
                       asp-route-pageSize="@pageSize">
                        1
                    </a>
                </li>

                @if (startPage > 2)
                {
                    <li class="page-item disabled">
                        <span class="page-link">…</span>
                    </li>
                }
            }

            <!-- Page window -->
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@i"
                       asp-route-pageSize="@pageSize">
                        @i
                    </a>
                </li>
            }

            <!-- Last page -->
            @if (endPage < totalPages)
            {
                @if (endPage < totalPages - 1)
                {
                    <li class="page-item disabled">
                        <span class="page-link">…</span>
                    </li>
                }

                <li class="page-item">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-pageNumber="@totalPages"
                       asp-route-pageSize="@pageSize">
                        @totalPages
                    </a>
                </li>
            }

            <!-- Next -->
            <li class="page-item @(Model.PagedProducts.HasNextPage ? "" : "disabled")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-pageNumber="@(currentPage + 1)"
                   asp-route-pageSize="@pageSize">
                    Next
                </a>
            </li>

        </ul>
    </nav>
}


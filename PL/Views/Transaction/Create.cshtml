@model BLL.ViewModel.CreateTransactionVM
@{
    ViewData["Title"] = "Add Transaction";
}

<h2>Add Stock Transaction</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="ProductId" class="form-label">Product</label>
        <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
            <option selected>--Select Product--</option>
        </select>
        <span asp-validation-for="ProductId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="WarehouseId" class="form-label">Warehouse</label>
        <select asp-for="WarehouseId" class="form-select" asp-items="ViewBag.Warehouses">
            <option selected>--Select Warehouse--</option>
        </select>
        <span asp-validation-for="WarehouseId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label">Transaction Type</label>
        <select asp-for="Type" class="form-select">
            <option value="">-- Select Type --</option>
            <option value="In">In</option>
            <option value="Out">Out</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <div class="input-group">
            <button type="button" class="btn btn-outline-secondary" id="decrease">-</button>
            <input asp-for="Quantity" class="form-control text-center" />
            <button type="button" class="btn btn-outline-secondary" id="increase">+</button>
        </div>
        <span asp-validation-for="Quantity" class="text-danger"></span>
        <div id="availableStock" class="form-text">Available Stock: <span id="stockValue">0</span></div>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
        $(function() {
            var productId = $("select[name='ProductId']").val();
            var warehouseId = $("select[name='WarehouseId']").val();
            if (!productId || !warehouseId) {
                    $("#stockValue").text(0);
                    return;
                }

                // AJAX call to controller to get stock
                $.get("/WarehouseStock/GetStock", { productId, warehouseId }, function (data) {
                    $("#stockValue").text(data);
                });
            // +/- buttons
            $("#increase").click(function () {
                var input = $("input[name='Quantity']");
                input.val(parseInt(input.val() || 0) + 1);
            });
            $("#decrease").click(function () {
                var input = $("input[name='Quantity']");
                var val = parseInt(input.val() || 0);
                if (val > 0) input.val(val - 1);
            });

            // Update available stock when product or warehouse changes
            $("select[name='ProductId'], select[name='WarehouseId']").change(function () {
                productId = $("select[name='ProductId']").val();
                warehouseId = $("select[name='WarehouseId']").val();
                if (!productId || !warehouseId) {
                    $("#stockValue").text(0);
                    return;
                }

                $.get("/WarehouseStock/GetStock", { productId, warehouseId }, function (data) {
                    $("#stockValue").text(data);
                });
            });
        });
    </script>
}

@model IEnumerable<Contract.StockTransactionVM>
@{
    ViewData["Title"] = "Stock Transactions";
}

<h2>Stock Transactions</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Transaction</a>
<a asp-controller="Home" asp-action="Index" class="btn btn-link mb-3">Back to Home</a>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Stock Transactions</h2>
    <button type="button" class="btn btn-outline-primary" onclick="location.href='@Url.Action("Index","Summary")'">
    View Summary
    </button>
    <div class="d-flex gap-2">
        <select id="warehouseFilter" class="form-select">
            <option value="">All Warehouses</option>
            @foreach (var w in ViewBag.Warehouses)
            {
                <option value="@w.Value"
                    selected="@(Context.Request.Query["warehouseId"] == w.Value? "selected": null)">
                    @w.Text
                </option>
            }

        </select>

        <select id="productFilter" class="form-select">
            <option value="">All Products</option>
            @foreach (var p in ViewBag.Products)
            {
                <option value="@p.Value"
                    selected="@(Context.Request.Query["productId"] == p.Value ? "selected" : null)">
                    @p.Text
                </option>
            }
        </select>
    </div>
</div>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Warehouse</th>
            <th>Type</th>
            <th>Quantity</th>
            <th>Notes</th>
            <th>Date</th>
            <th style="width:220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.ProductName</td>
                <td>@t.WarehouseName</td>
                <td>@t.TransactionType</td>
                <td>@t.Quantity</td>
                <td>@t.Notes</td>
                <td>@t.TransactionDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-info">Details</a>

                    <form asp-action="Reverse" asp-route-id="@t.Id" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="button" class="btn btn-sm btn-danger delete-btn" data-id="@t.Id">Reverse</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_DeleteBox">
@section Scripts {
<script>
    function applyFilters() {
    const warehouseId = $("#warehouseFilter").val();
    const productId = $("#productFilter").val();

    const params = new URLSearchParams();

    if (warehouseId !== "")
        params.append("warehouseId", warehouseId);

    if (productId !== "") 
        params.append("productId", productId);

    const query = params.toString();
    window.location.href = query ? "?" + query : window.location.pathname;
}

$("#warehouseFilter, #productFilter").on("change", applyFilters);

</script>
}
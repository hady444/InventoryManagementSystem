@model BLL.ViewModel.CreateTransactionVM
@{
    ViewData["Title"] = "Edit Transaction";
}

<h2>Edit Stock Transaction</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="WarehouseId" />

    <div class="mb-3">
        <label asp-for="Type" class="form-label">Transaction Type</label>
        <select asp-for="Type" class="form-select">
            <option value="In">In</option>
            <option value="Out">Out</option>
        </select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Quantity" class="form-label">Quantity</label>
        <div class="input-group">
            <button type="button" class="btn btn-outline-secondary" id="decrease">-</button>
            <input asp-for="Quantity" class="form-control text-center" />
            <button type="button" class="btn btn-outline-secondary" id="increase">+</button>
        </div>
        <span asp-validation-for="Quantity" class="text-danger"></span>
        <div id="availableStock" class="form-text">Available Stock: <span id="stockValue">0</span></div>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <span asp-validation-for="Notes" class="text-danger"></span>


    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <script>
        $(function() {
            $("#increase").click(function () {
                var input = $("input[name='Quantity']");
                input.val(parseInt(input.val() || 0) + 1);
            });
            $("#decrease").click(function () {
                var input = $("input[name='Quantity']");
                var val = parseInt(input.val() || 0);
                if (val > 0) input.val(val - 1);
            });
            
            // Load available stock on page load
            var productId = $("input[name='ProductId']").val();
            var warehouseId = $("input[name='WarehouseId']").val();
            $.get("/WarehouseStock/GetStock", { productId, warehouseId }, function (data) {
                $("#stockValue").text(data);
            });
        });
    </script>
}

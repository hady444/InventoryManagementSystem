@model IEnumerable<DAL.Models.Warehouse>
<h2>Warehouses</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Add Warehouse</a>
<a asp-action="Index" asp-controller="Home" class="btn btn-link mb-1">Back to Home</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th style="width:220px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var w in Model)
        {
            <tr>
                <td>@w.Name</td>
                <td class="truncate">@w.Location</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@w.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@w.Id" class="btn btn-sm btn-info">Details</a>

                    <form asp-action="Delete" asp-route-id="@w.Id"
                          method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="button"
                                 class="btn btn-sm btn-danger delete-btn"
                                 data-id="@w.Id">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_DeleteBox" />